<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
    <PackageId>OpenNISharp2</PackageId>
    <Version>2.2.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Ruslan Balanukhin</Authors>
    <Company>Rational Core</Company>
    <Product>OpenNISharp2</Product>
    <Description>OpenNISharp2 is a managed library for .NET/Mono.</Description>
    <Copyright>Copyright Â© Ruslan Balanukhin 2017 All rights reserved.</Copyright>
    <PackageLicenseUrl>https://github.com/rational-core/OpenNISharp2/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/rational-core/OpenNISharp2</PackageProjectUrl>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <PackageTags>OpenNI2</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <NoWarn>1701;1702;1705;169;108;1591;1573;1591</NoWarn>
    <WarningsAsErrors />
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>
  
</Project>
